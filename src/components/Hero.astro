---
import heroImage from "@assets/images/kath-hero.png";
import { Image } from "@astrojs/image/components";
import Button from "@components/ui/Button.astro";
---

<section
  data-testid="hero"
  class="flex h-screen flex-col-reverse items-center justify-center text-center lg:flex-row"
>
  <div class="mb-10 flex flex-col items-center lg:mb-0 lg:w-1/2">
    <div>
      <h1
        class="mb-10 font-monospace text-3xl text-black dark:text-white lg:text-5xl"
      >
        Hi! My name is <span class="font-sans text-5xl text-orange"><strong> Katharine</strong></span>
        and I am a holistic practitioner based in Newark-on-Trent.
      </h1>
    </div>
    <div class="mb-10">
      <Button style={"primary"} size={"lg"} class={"flex"} name="learn more">
        <a href="#about"> Learn more</a>
      </Button>
    </div>
  </div>
  <div
    data-testid="hero-img"
    class="mb-10 flex w-1/2 items-center justify-center"
  >
    <Image
      src={heroImage}
      alt="Katharine McBeath"
      format="png"
      width={600}
      loading="eager"
      class="rounded-3xl"
    />
  </div>
</section>

